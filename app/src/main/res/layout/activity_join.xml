<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        android:textSize="30dp"
        android:id="@+id/menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20dp"
        android:id="@+id/id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_id"
        android:hint="아이디를 입력하세요"
        app:layout_constraintTop_toTopOf="@id/id"
        app:layout_constraintBottom_toBottomOf="@id/id"
        app:layout_constraintLeft_toRightOf="@id/id"
        app:layout_constraintRight_toLeftOf="@id/btn_id"
        android:layout_marginLeft="30dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_id"
        android:text="확인"
        app:layout_constraintTop_toTopOf="@id/ed_id"
        app:layout_constraintBottom_toBottomOf="@id/ed_id"
        app:layout_constraintLeft_toRightOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:background="@drawable/rectangle3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20dp"
        android:id="@+id/pw"
        app:layout_constraintTop_toTopOf="@id/ed_pw"
        app:layout_constraintBottom_toBottomOf="@id/ed_pw"
        app:layout_constraintLeft_toLeftOf="@id/id"
        app:layout_constraintRight_toRightOf="@id/id"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_pw"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/ed_id"
        app:layout_constraintLeft_toLeftOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="@id/btn_id"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_pwto"
        android:hint="다시한번 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/ed_pw"
        app:layout_constraintLeft_toLeftOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="@id/btn_id"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="@id/ed_name"
        app:layout_constraintBottom_toBottomOf="@id/ed_name"
        app:layout_constraintLeft_toLeftOf="@id/id"
        app:layout_constraintRight_toRightOf="@id/id"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_name"
        android:hint="이름을 입력하세요"
        app:layout_constraintTop_toBottomOf="@id/ed_pwto"
        app:layout_constraintLeft_toLeftOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="@id/btn_id"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="20dp"
        android:id="@+id/gender"
        app:layout_constraintTop_toTopOf="@id/btn_genger"
        app:layout_constraintBottom_toBottomOf="@id/btn_genger"
        app:layout_constraintLeft_toLeftOf="@id/id"
        app:layout_constraintRight_toRightOf="@id/id"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/btn_genger"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/ed_name"
        app:layout_constraintLeft_toLeftOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="@id/btn_id"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle3"/>


    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:text="나이"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/btn_age"
        app:layout_constraintBottom_toBottomOf="@id/btn_age"
        app:layout_constraintLeft_toLeftOf="@id/id"
        app:layout_constraintRight_toRightOf="@id/id"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/btn_age"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_genger"
        app:layout_constraintLeft_toLeftOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="@id/btn_id"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="20dp"
        android:id="@+id/email"
        app:layout_constraintTop_toTopOf="@id/ed_email"
        app:layout_constraintBottom_toBottomOf="@id/ed_email"
        app:layout_constraintLeft_toLeftOf="@id/id"
        app:layout_constraintRight_toRightOf="@id/id"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_email"
        android:hint="이메일을 입력하세요"
        app:layout_constraintTop_toBottomOf="@id/btn_age"
        app:layout_constraintLeft_toLeftOf="@id/ed_id"
        app:layout_constraintRight_toRightOf="@id/btn_id"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/btn_join"
        android:text="회원가입"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ed_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rectangle3"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/btn_cancel"
        android:text="취소"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_join"
        app:layout_constraintRight_toRightOf="@id/btn_join"
        android:background="#00000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>