<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SickeditActivity">

    <include
        android:id="@+id/include"
        layout="@layout/tap"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/hospital"
        android:text="병원"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_hospital"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/hospital"
        app:layout_constraintBottom_toBottomOf="@id/hospital"
        app:layout_constraintLeft_toRightOf="@id/hospital"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tell"
        android:text="전화번호"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/btn_tell"
        app:layout_constraintBottom_toBottomOf="@id/btn_tell"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/btn_tell"
        android:gravity="center"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/ed_hospital"
        app:layout_constraintLeft_toLeftOf="@id/ed_hospital"
        app:layout_constraintRight_toRightOf="@id/ed_hospital"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/sickname"
        android:text="질병"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/ed_sickname"
        app:layout_constraintBottom_toBottomOf="@id/ed_sickname"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/ed_sickname"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_tell"
        app:layout_constraintLeft_toLeftOf="@id/ed_hospital"
        app:layout_constraintRight_toRightOf="@id/ed_hospital"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/medcycle"
        android:text="약\n주기"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btn_medcycle"
        app:layout_constraintBottom_toBottomOf="@id/btn_medcycle"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/btn_medcycle"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ed_sickname"
        app:layout_constraintLeft_toLeftOf="@id/ed_hospital"
        app:layout_constraintRight_toRightOf="@id/ed_hospital"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="시작\n날짜"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        app:layout_constraintBottom_toBottomOf="@id/btn_start"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/btn_start"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/btn_medcycle"
        app:layout_constraintLeft_toLeftOf="@id/ed_hospital"
        app:layout_constraintRight_toRightOf="@id/ed_hospital"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:text="주의 사항"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/start"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:id="@+id/ed_check"
        android:textSize="18dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/check"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/ed_hospital"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="70dp"/>
    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/btn_save"
        app:layout_constraintTop_toTopOf="@id/btn_cancel"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>