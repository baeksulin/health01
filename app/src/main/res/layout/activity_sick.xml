<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SickActivity">

    <include
        android:id="@+id/include"
        layout="@layout/tap"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/hospital"
        android:text="병원"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/tv_hospital"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/hospital"
        app:layout_constraintBottom_toBottomOf="@id/hospital"
        app:layout_constraintLeft_toRightOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/img_call"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle3"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tell"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital"
        app:layout_constraintLeft_toLeftOf="@id/tv_hospital"
        app:layout_constraintRight_toRightOf="@id/tv_hospital"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/img_call"
        android:src="@drawable/img_call"
        app:layout_constraintTop_toTopOf="@id/tv_hospital"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sickname"
        android:text="질병"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tv_sickname"
        app:layout_constraintBottom_toBottomOf="@id/tv_sickname"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/tv_sickname"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital"
        app:layout_constraintLeft_toLeftOf="@id/tv_hospital"
        app:layout_constraintRight_toRightOf="@id/img_call"
        android:layout_marginTop="35dp"
        android:background="@drawable/rectangle3"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/medcycle"
        android:text="약\n주기"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tv_medcycle"
        app:layout_constraintBottom_toBottomOf="@id/tv_medcycle"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/tv_medcycle"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_sickname"
        app:layout_constraintLeft_toLeftOf="@id/tv_hospital"
        app:layout_constraintRight_toRightOf="@id/img_call"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle3"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="시작\n날짜"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tv_start"
        app:layout_constraintBottom_toBottomOf="@id/tv_start"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/hospital"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/tv_start"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_medcycle"
        app:layout_constraintLeft_toLeftOf="@id/tv_hospital"
        app:layout_constraintRight_toRightOf="@id/img_call"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:text="주의 사항"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/start"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:id="@+id/tv_check"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/check"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/img_call"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle3"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_edit"
        android:text="수정하기"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/hospital"
        app:layout_constraintRight_toRightOf="@id/tv_hospital"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectangle3"/>

</androidx.constraintlayout.widget.ConstraintLayout>